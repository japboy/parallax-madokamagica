body
  margin: 0
  padding: 0

  header
    background-color: rgba(255,255,255,0.5)
    height: 10px
    left: 0
    position: fixed
    text-align: center
    top: 0
    width: 100%
    z-index: 1

    h1
      font-size: 10px
      line-height: 100%
      margin: 0
      padding: 0

  #main
    position: absolute
    height: 1200%
    width: 100%

    #loader
      color: rgb(200,200,200)
      position: absolute
      text-align: center
      top: (100 / 12 / 2)%
      width: 100%

    .image
      background-position-x: 50%
      background-repeat: no-repeat
      background-size: 150%
      box-shadow: 0 0 50px rgb(0,0,0)
      height: (100 / 12)%
      position: relative
      width: 100%

  footer
    background-color: rgba(255,255,255,0.5)
    bottom: 0
    height: 10px
    left: 0
    position: fixed
    text-align: center
    width: 100%
    z-index: 1

    p
      font-size: 10px
      line-height: 100%
      margin: 0
      padding: 0
